<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/game_streams_page">

    <fragment
        android:id="@+id/game_streams_page"
        android:name="com.example.twitchapp.ui.streams.GameStreamsFragment"
        android:label="GameStreamsFragment">
        <action
            android:id="@+id/action_game_streams_page_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>

    <fragment
        android:id="@+id/favorite_games_page"
        android:name="com.example.twitchapp.ui.favourite.FavouriteGamesFragment"
        android:label="FavouriteGamesFragment" >
    </fragment>
    <fragment
        android:id="@+id/appReviewFragment"
        android:name="com.example.twitchapp.ui.review.AppReviewFragment"
        android:label="AppReviewFragment" />
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.twitchapp.ui.game.GameFragment"
        android:label="GameFragment" />
</navigation>